{
  "name": "payload-starter-typescript",
  "description": "Blank template - no collections",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "pnpm copyfiles && pnpm build:payload && pnpm build:server",
    "serve": "PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema"
  },
  "dependencies": {
    "@babel/runtime": "^7.19.4",
    "@tanstack/react-query": "^4.29.14",
    "antd": "^5.6.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "google-auth-library": "^8.7.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "payload": "^1.9.0",
    "payload-plugin-phone-field": "^1.0.6",
    "process": "^0.11.10",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-markdown": "^8.0.3",
    "react-router-dom": "^5.3.4",
    "rehype-katex": "^6.0.2",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "slate": "^0.84.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^4.29.9",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/qs": "^6.9.7",
    "@types/react": "^18.0.21",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.7.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.9.5"
  }
}
